  %body
    /
      Page Header
      \==================================================
    #tf-header
      .container
        / container
        %h1 Sign Up!
      / end container
    /
      Contact Section
      \==================================================
    #tf-signup.contact
      .container
        / container
        .section-header
          %h2
            %span.highlight
              %strong Sign Up!
          %a{:href => "/sign_in.html"} Already a friend? Sign In Here!
        .row
          .col-xs-6.col-centered
            = form_for "/users", :method => :post do
              = label :user, :name, 'Your Name:'
              <br>
              = text_field :user, :name
              <br>
              <br>
              = submit_tag 'SIGN UP'


            %form{:action => sign_up_path, :method => "post", :novalidate => ""}
              %div{:style => "display:none"}
                %input{:name => "utf8", :type => "hidden", :value => "✓"}
                %input{:name => "authenticity_token", :type => "hidden", :value => "NNb6+J/j46LcrgYUC60wQ2titMuJQ5lLqyAbnbAUkdo="}
              .form-group
                %input#user_name.form-control{:autocomplete => "off", "data-validation-required-message" => "Please enter your name.", :name => "user[name]", :placeholder => "Your Name *", :required => "", :type => "text"}
                %p.help-block.text-danger
              .form-group
                / Your email input
                %input#user_email.form-control{:autocomplete => "off", "data-validation-required-message" => "Please enter your email address.", :name => "user[email]", :placeholder => "Your Email *", :required => "", :type => "email"}
                %p.help-block.text-danger
              .form-group
                / Your password input
                %input#user_password.form-control{:autocomplete => "off", "data-validation-required-message" => "Please enter a password.", :name => "user[password]", :placeholder => "Your Password *", :required => "", :type => "password"}
                %p.help-block.text-danger
              .form-group
                / Your password confirmation input
                %input#user_password_confirmation.form-control{:autocomplete => "off", "data-validation-required-message" => "Please confirm password.", :name => "user[password_confirmation]", :placeholder => "Confirm Password *", :required => "", :type => "password"}
                %p.help-block.text-danger
              %button.btn.btn-primary.tf-btn.color{:name => "commit", :type => "submit"} SIGN UP
              / Sign Up button
              %br/
              %br/
              #success{"alert-success" => ""} Welcome!
          %a.btn.btn-primary.tf-btn.color{:button => "", :href => "/auth/facebook", :type => "facebook_sign"} Sign in with Facebook
          / Sign Up Facebook button
          %br/
          %br/
          %a.btn.btn-primary.tf-btn.color{:button => "", :href => "/auth/twitter", :type => "twitter_sign"} Sign in with Twitter
          / Sign Up Twitter button
          %br/
          %br/
          %a.btn.btn-primary.tf-btn.color{:button => "", :href => "/auth/google_oauth2", :type => "google_sign"} Sign in with Google
          / Sign Up Google button
          %br/
          %br/
      / end contact form outer row with centered text
      /
        Footer
        \==================================================
      #tf-footer
        .container
          / container
          %p.pull-left © 2015 ethanol. All rights reserved. Theme by Rudhi Sasmito.
          / copyright text here
          %ul.list-inline.social.pull-right
            %li
              %a{:href => "auth/facebook"}
                %i.fa.fa-facebook
            / Change # With your FB Link
            %li
              %a{:href => "auth/twitter"}
                %i.fa.fa-twitter
            / Change # With your Twitter Link
            %li
              %a{:href => "auth/google_oauth2"}
                %i.fa.fa-google-plus
            / Change # With your Google Plus Link
        / end container
